extends layout

block content
  .container.container--login 
    img.logo(src="/images/logo.png", alt="Logo")
    .form.form--login 
      p.form__label Register 
      p.form__sub-label Enter your information to make an account
      input.form__field#name(type="text" placeholder="Name")
      input.form__field#email(type="text" placeholder="E-mail address")
      .icon
        img.icon--eye(src="/images/eye.svg", alt="eye")
        input.form__field#password(type="password" placeholder="Password")
      button.button.button--primary.button--signup Register
    p.disclaimer Already have an account? #[a(href="/login") Log in.]
  .popup
    .container.container--popup
      strong.popup-title Login error 
      p.popup-text Error message
      button.button.button--popup Ok
  script(src="/javascripts/signup.js") 
  