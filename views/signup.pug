extends layout

block content
  .container.container--login 
    img.logo(src="/images/logo.png", alt="Logo")
    .form.form--login 
      p.label Register 
      p.sub-label Enter your information to make an account
      input.field#name(type="text" placeholder="Name")
      input.field#email(type="text" placeholder="E-mail address")
      .eye--icon 
        img.eye(src="/images/eye.svg", alt="eye")
        input.field#password(type="password" placeholder="Password")
      button.button.button--blue.button--signup Register
    p.disclaimer Already have an account? #[a(href="/login") Log in.]
  script(src="/javascripts/signup.js") 
  